    <DockPanel x:Name="Dock">
        <StackPanel Orientation = "Horizontal" DockPanel.Dock="Bottom" Background="#FFDDE0DD">
            <Button x:Name = "ImportConfig"  Content = "Import Config" Width = "90" Height = "20" Click="OnImportConfigClick"/>
            <Button x:Name = "BuildConfig" Content = "Build Config" Width = "90" Height = "20" Click="OnBuildConfigClick"/>
            <Button x:Name = "BuildPack" Content = "Build Full Pack" Width = "90" Height = "20" Click="OnBuildFullPackClick"/>
            <Button x:Name = "Alphabetize" Content = "Alphabetize" Width = "90" Height = "20" Click="OnAlphabetizeClick"/>
            <Button x:Name = "MassImport" Content = "Mass Import Names" Width = "120" Height = "20" Click="OnMassImportClick"/>
            <Button x:Name = "OpenInput" Content = "Open Input Folder" Width = "120" Height = "20" Click="OnOpenInputClick"/>
            <Button x:Name = "Crash" Content = "Check Crash" Width = "90" Height = "20" Click="OnCrashClick"/>
            <Button x:Name = "SettingsButton" Content = "Program Settings" Width = "100" Height = "20" Click="OnSettingsClick"/>

        </StackPanel>
        <Grid DockPanel.Dock="Bottom">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="71*"/>
                <ColumnDefinition Width="154*"/>
            </Grid.ColumnDefinitions>
            <TextBox x:Name="CupCount" 
                     Margin="72,0,0,0" Width="117" HorizontalAlignment="Left" VerticalAlignment="Center"
                     TextAlignment="Center" PreviewTextInput="NumbersOnlyBox" TextChanged="OnCupCountChange"  />
            <TextBlock x:Name="CupCountLabel"
                Margin="10,0,0,0" HorizontalAlignment="Left" VerticalAlignment="Center" Foreground="White"
                Text="Cup Count" TextWrapping="Wrap" FontWeight="Bold" TextDecorations="Underline" />

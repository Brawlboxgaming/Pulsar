<Window x:Class="PulsarPackCreator.MassImportWindow"
        Name="MassImport"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        ResizeMode="CanMinimize"
        Title="Paste lists of tracks, authors and slots" Height="825" Width="1050" Background="#FD353535"
        HorizontalAlignment="Center" VerticalAlignment="Center">
    <Border BorderBrush="Black" BorderThickness="2">
        <Grid Background="#FD202020" x:Name="GridMassImport" >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="14*"/>
                <ColumnDefinition Width="14*"/>
                <ColumnDefinition Width="10.25*"/>
                <ColumnDefinition Width="10.25*"/>
                <ColumnDefinition Width="10.25*"/>
            </Grid.ColumnDefinitions>
            <Button x:Name="SaveImport" Grid.Column="4"
                    Margin="124,753,0,0" Height="25" Width="60"
                    Content="Save"  
                    Click="OnSaveImportClick" />
            <Border BorderThickness="1" BorderBrush="Black" Grid.Column="0">
                <TextBox x:Name="NamesImport"
                    Width="240" Height="700" VerticalContentAlignment="Top" VerticalScrollBarVisibility="Auto"
                    Text="" FontSize="14" AcceptsReturn="True"/>
            </Border>
            <Border BorderThickness="1" BorderBrush="Black" Grid.Column="1">
                <TextBox x:Name="AuthorsImport" 
                    Width="240" Height="700" VerticalContentAlignment="Top" VerticalScrollBarVisibility="Auto"
                    Text="" FontSize="14" AcceptsReturn="True"/>
            </Border>
            <Border BorderThickness="1" BorderBrush="Black" Grid.Column="2">
                <TextBox x:Name="VersionsImport" 
                    Width="170" Height="700" VerticalContentAlignment="Top" VerticalScrollBarVisibility="Auto"
                    Text="" FontSize="14" AcceptsReturn="True"/>
            </Border>
            <Border BorderThickness="1" BorderBrush="Black" Grid.Column="3">
                <TextBox x:Name="SlotsImport" 
                    Width="170" Height="700" VerticalContentAlignment="Top" VerticalScrollBarVisibility="Auto"
                    Text="" FontSize="14" AcceptsReturn="True"/>
            </Border>
            <Border BorderThickness="1" BorderBrush="Black" Grid.Column="4" Grid.ColumnSpan="2" >
                <TextBox x:Name="MusicSlotsImport" 
                    Width="170" Height="700" VerticalContentAlignment="Top" VerticalScrollBarVisibility="Auto"
                    Text="" FontSize="14" AcceptsReturn="True"/>
            </Border>
            <TextBlock x:Name="NamesImportLabel" Grid.Column="0"
                    Margin="56,19,55,743" Width="150" Foreground="White" Height="18"
                    Text="Track Names" FontSize="14" TextWrapping="Wrap" TextAlignment="Center" FontWeight="Bold" TextDecorations="Underline" />
            <TextBlock x:Name="AuthorsImportLabel" Grid.Column="1"
                    Margin="56,19,55,743" Width="150" Foreground="White" Height="18"
                    Text="Track Authors" FontSize="14" TextWrapping="Wrap" TextAlignment="Center" FontWeight="Bold" TextDecorations="Underline" />
            <TextBlock x:Name="VersionsImportLabel" Grid.Row="0" Grid.Column="2"
                    Margin="18,19,18,743" Width="150" Foreground="White" Height="18"
                    Text="Versions (optional)" FontSize="14" TextWrapping="Wrap" TextAlignment="Center" FontWeight="Bold" TextDecorations="Underline"/>
            <TextBlock x:Name="SlotsImportLabel" Grid.Row="0" Grid.Column="3"
                    Margin="18,19,18,743" Width="150" Foreground="White" Height="18"
                    Text="Slots" FontSize="14" TextWrapping="Wrap" TextAlignment="Center" FontWeight="Bold" TextDecorations="Underline"/>
            <TextBlock x:Name="MusicSlotsImportLabel" Grid.Row="0" Grid.Column="4"
                    Margin="18,19,18,743" Width="150" Foreground="White" Height="18"
                    Text="Music Slots" FontSize="14" TextWrapping="Wrap" TextAlignment="Center" FontWeight="Bold" TextDecorations="Underline"/>
        </Grid>
    </Border>
</Window>